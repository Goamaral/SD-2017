<?xml version="1.0" encoding="UTF-8"?>

<!-- The core configuration file for the framework is the default (struts.xml) file
and should reside on the classpath of the webapp (generally /WEB-INF/classes). -->

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

  <!-- devMode equals debug information and reload everything for every request -->
  <constant name="struts.devMode" value="true" />
  <constant name="struts.ui.theme" value="xhtml" />

  <package name="iVotas" extends="struts-default">
	
	<default-action-ref name="home" />

	<global-results>
		<result name="exception">/error.jsp</result>
	</global-results>

	<!-- all exceptions not caught by the application will lead to error.jsp -->
	<global-exception-mappings>
		<exception-mapping exception="java.lang.Exception" result="exception" />
	</global-exception-mappings>

    <!-- Index page -->
    <action name="home" class="iVotas.actions.Index" method="index">
      <result name="success">/Home/index.jsp</result>
      <result name="platform" type="redirectAction">platform</result>
    </action>

    <action name="login" class="iVotas.actions.Index" method="login">
        <result name="platform" type="redirectAction">platform</result>
        <result name="console" type="redirectAction">console</result>
        <result name="home" type="redirectAction">home</result>
    </action>

    <action name="logout" class="iVotas.actions.Index" method="logout">
        <result type="redirectAction">home</result>
    </action>

    <!-- Platform page -->
    <action name="platform" class="iVotas.actions.Platform" method="index">
        <result name="home" type="redirectAction">home</result>
        <result name="console" type="redirectAction">console</result>
        <result name="success">/Platform/index.jsp</result>
    </action>

    <!-- Console page -->
    <action name="console" class="iVotas.actions.Console" method="index">
        <result name="home" type="redirectAction">home</result>
        <result name="platform" type="redirectAction">platform</result>
        <result name="success">/Console/index.jsp</result>
    </action>

    <action name="registerMemberForm" class="iVotas.actions.Console" method="getRegisterMemberForm">
        <result>/Console/registerMember.jsp</result>
    </action>

    <action name="listDepartments" class="iVotas.actions.Console" method="listDepartments">
        <result>/Core/listDepartments.jsp</result>
    </action>

    <action name="registerMember" class="iVotas.actions.Console" method="registerMember">
        <result type="redirectAction">console</result>
    </action>

  </package>

</struts>